<% layout("../layouts/boilerplate.ejs")-%>
<style>
  .card {
    margin: 20px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    width: 500px;
    margin-left: 30%;
    
  }
  .card-body {
    padding: 20px;
  }
  .card-title {
    color: #333;
  }
  .card-text {
    color: #666;
  }
  .btn {
    border-radius: 5px;
    margin-top: 10px;
  }
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }
  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }
  .btn-danger:hover {
    background-color: #c82333;
    border-color: #bd2130;
  }
  .card-img {
    max-width: 100%;
    max-height: 300px; 
    height: auto;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }
  .buttons{
    display: flex;
  }
  h2{
    text-align: center;
    font-style: italic;
    color: #bd2130;
  }
</style>
<body>
  <h2><%= listing.title %></h2>
  <div class="card">
    <img src="<%= listing.image %>" class="card-img" alt="Listing Image">
    <div class="card-body">
      
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %> </p>
      <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
      <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>
     <div class="buttons">
      <form action="/listing/<%= listing.id %>/edit" method="GET">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form> 
      <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#review">
        write a review
      </button>
      
      
     </div>
     <div class="modal fade" id="review" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">review form</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
         <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="rate">Rate us</label>
              <input type="range" class="form-control-range" id="rate" min="1" max="5" step="1">
            </div>
            <div class="form-group">
              <label for="review">Write a review</label>
              <textarea class="form-control" id="review" rows="5" cols="30"></textarea>
            </div>
            
          </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <form action="/listing/<%= listing.id %>/reviews" method="post">
              <button type="button" class="btn btn-primary">Save changes</button>
             </form>
          </div>
        </div>
      </div>
    </div>
     

   

</body>