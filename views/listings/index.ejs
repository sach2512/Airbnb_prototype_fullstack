.card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Responsive grid layout */
    grid-gap: 10px; /* Adjust the gap between grid items */
}


    .card {
        height: 450px;
        width: 300px;
        border: none;
         border-bottom: 2rem;
         margin-top: 7px;
    }
    .cardimg {
        width: 18rem;
        height: 20rem;
        object-fit: cover;
       border-radius: 10px;
       padding: 0;
       transition: transform .4s;
    }
   
    .card-img-overlay{
        opacity: 0;
        
    }
    .card-body{
        padding: 0%;
    }
    .card-title,
.card-text {
    font-family: "Jakarta", sans-serif; 
    font-weight: 700; 
}
.showlist{
    text-decoration: none;

}
.card:hover {
  -ms-transform: scale(1.05);
  -webkit-transform: scale(1.05); 
  transform: scale(1.05); 
}
</style>
<body>
    <h4>All Listings</h4>
    <div class="card-container">
     
        <% for(var list of listings) { %>
           <a href="listing/details/<%= list.id %>" class="showlist">
            <div class="card">
                <div class="card-header">
                    <img class="cardimg" alt="..." src="<%= list.image %>">
                    <div class="card-img-overlay"></div>
                </div>
                
                <div class="card-body">
                  <!--<a href="listing/details/<%= list.id %>"><%= list.title %></a>-->

                    <h5 class="card-title"><%= list.title %></h5>
                    <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN") %> / per night</p>
                </div>
            </div>
           </a>
        <% } %>
       
    </div>
</body>